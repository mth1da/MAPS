{% extends 'base.html.twig' %}

{% block title %}Modification du mot de passe de {{ app.user.getFirstName() }}{% endblock %}


{% block body %}

    <section class="container" style="width:50%">

        <div class="row">

                <h1 class="h3 mb-3 font-weight-normal">Modification du mot de passe de {{ app.user.getFirstName() }} {{ app.user.getLastName() }} </h1>


                {% for message in app.flashes('success') %}
                    <div class="p-3 text-success-emphasis bg-success-subtle  border border---bs-success-bg-subtle rounded-3">                        {{ message }}
                    </div>
                {% endfor %}

            <!--
              <fieldset class="mb-3">
