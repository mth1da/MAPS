{% extends 'base.html.twig' %}

{% block title %}Modification du profil de {{ app.user.getFirstName() }}{% endblock %}


{% block body %}

    <section class="container" style="width:50%">

        <div class="row">

            <div class="col">
                <h1 class="h3 mb-3 font-weight-normal">Modification du profil de {{ app.user.getFirstName() }} {{ app.user.getLastName() }} </h1>


                {% for message in app.flashes('success') %}
                    <div class="p-3 text-success-emphasis bg-success-subtle  border border---bs-success-bg-subtle rounded-3">                        {{ message }}
                    </div>
                {% endfor %}


                <fieldset class="mb-3">
                    <legend>Mes Informations :</h4>
                    </legend>

                    {{ form(form) }}



                    <button class="btn btn-lg btn-primary my-3" type="reset">
                        Effacer <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eraser-fill" viewBox="0 0 16 16"><path d="M8.086 2.207a2 2 0 0 1 2.828 0l3.879 3.879a2 2 0 0 1 0 2.828l-5.5 5.5A2 2 0 0 1 7.879 15H5.12a2 2 0 0 1-1.414-.586l-2.5-2.5a2 2 0 0 1 0-2.828l6.879-6.879zm.66 11.34L3.453 8.254 1.914 9.793a1 1 0 0 0 0 1.414l2.5 2.5a1 1 0 0 0 .707.293H7.88a1 1 0 0 0 .707-.293l.16-.16z"/></svg>
                    </button>
                </fieldset>



            </div>
        </div>
    </section>


{% endblock %}

