{% extends 'base.html.twig' %}

{% block title %}Mon Compte{% endblock %}


{% block body %}

    <section class="container" style="width:50%">
        <div class="row">
            <div class="col">
                <h1 class="h3 mb-3 font-weight-normal">Mon Compte</h1>

                {% for message in app.flashes('success') %}
                    <div class="p-3 text-success-emphasis bg-success-subtle  border border---bs-success-bg-subtle rounded-3">                        {{ message }}
                    </div>
                {% endfor %}

                <fieldset class="mb-3">
                    <legend>Mes Informations</legend>
                    <button class="btn btn-lg btn-primary my-3" type="submit">
                        Modifier
                    </button>
                    <button class="btn btn-lg btn-primary my-3" type="reset">
                        Effacer
                    </button>
                </fieldset>

                <fieldset class="mb-3">
                    <legend>Mes Sandwichs</legend>
                </fieldset>

                <fieldset class="mb-3">
                    <legend>Mes Publications</legend>
                </fieldset>

            </div>
        </div>
    </section>


{% endblock %}

