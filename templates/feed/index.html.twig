{% extends 'base.html.twig' %}

{% block title %}Actu{% endblock %}


{% block body %}

    <div class="container">

    Partagez votre MAPS Sandwich !
    {% if app.user %}
        <button type="button" class="btn btn-secondary" onclick="location.href='{{ path('app_publication_add') }}'">Ajouter une publication</button>
    {% else%}
        <button type="button" class="btn btn-secondary" onclick="location.href='{{ path('app_login') }}'">Se connecter</button>
    {% endif %}

    <br><br>
    {% for publi in publications %}

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">nom</h5>
            <img src="{{ asset('images/imgtest.webp')}}" class="card-img-top" alt="photo pour le test">
            <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
            <p class="card-text">{{ publi.commentaire }}</p>
        </div>
    </div>
    </div>

    {% endfor %}

{% endblock %}
