{% extends 'base.html.twig' %}

{% block title %}Hello SandwichController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if ingredients %}
        <ul>
            {% for ingredient in ingredients %}
                <form action={{ path('app_sandwich_add_basket', {id: ingredient.id}) }}>
                    <li>nom: {{ ingredient.name }}</li>
                    <li>description: {{ ingredient.description | raw }}</li>
                    <li>prix: {{ ingredient.price }}</li>
                    <li><button>Sélectionner</button></li>
                </form>

            {% endfor %}
        </ul>
    {% else %}
        <p>Pas d'ingrédients ici.</p>
    {% endif %}

    <button>Commander</button>

    {{ dump(dataPanier) }}
</div>
{% endblock %}
